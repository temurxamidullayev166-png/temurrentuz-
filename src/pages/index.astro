<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    // ====== STATE ======
    let isRegistered = false;
    let userData = { name: "", phone: "" };
    let currentMode = "";

    // ====== TRANSLATIONS ======
    const translations = {
      "O'zbek": { login: "Kirish", give: "Ijaraga berish", take: "Ijaraga olish", givesub: "Mashina qo'shish", takesub: "Mashina qidirish", submit: "Joylash", back: "← Orqaga" },
      "English": { login: "Login", give: "Rent Out", take: "Rent In", givesub: "Add a car", takesub: "Search car", submit: "Post Ad", back: "← Back" },
      "Русский": { login: "Вход", give: "Сдать", take: "Снять", givesub: "Добавить авто", takesub: "Поиск авто", submit: "Разместить", back: "← Назад" },
      "Türkçe": { login: "Giriş", give: "Kiraya Ver", take: "Kiralık Al", givesub: "Araba Ekle", takesub: "Araba Ara", submit: "Yayınla", back: "← Geri" },
      "Deutsch": { login: "Anmelden", give: "Vermieten", take: "Mieten", givesub: "Auto hinzufügen", takesub: "Auto suchen", submit: "Senden", back: "← Zurück" },
      "Français": { login: "Connexion", give: "Louer", take: "Prendre", givesub: "Ajouter", takesub: "Chercher", submit: "Publier", back: "← Retour" }
    };

    const countries = [
      { n: "Uzbekistan", c: "+998" }, { n: "USA", c: "+1" }, { n: "Russia", c: "+7" },
      { n: "Turkey", c: "+90" }, { n: "Germany", c: "+49" }, { n: "UK", c: "+44" },
      { n: "UAE", c: "+971" }, { n: "Kazakhstan", c: "+7" }, { n: "Kyrgyzstan", c: "+996" },
      { n: "Tajikistan", c: "+992" }, { n: "S. Korea", c: "+82" }, { n: "Poland", c: "+48" },
      { n: "France", c: "+33" }, { n: "Italy", c: "+39" }, { n: "Egypt", c: "+20" },
      { n: "India", c: "+91" }, { n: "Japan", c: "+81" }, { n: "China", c: "+86" }
    ];

    // ====== ELEMENTS ======
    const overlayScreen = document.getElementById("overlay-screen");
    const overlayContent = document.getElementById("overlay-content");

    const countryOverlay = document.getElementById("country-overlay");
    const countryContent = document.getElementById("country-content");
    const countryBtn = document.getElementById("country-code-btn");
    const btnCancelCountry = document.getElementById("btn-cancel-country");

    const profileOverlay = document.getElementById("profile-overlay");
    const profileTrigger = document.getElementById("profile-trigger");
    const btnCloseProfile = document.getElementById("btn-close-profile");
    const btnLogout = document.getElementById("btn-logout");
    const btnProfileHome = document.getElementById("btn-profile-home");

    const stepChoice = document.getElementById("step-choice");
    const formRegister = document.getElementById("form-register");
    const extraFields = document.getElementById("extra-fields");
    const carResults = document.getElementById("car-results");

    const inpName = document.getElementById("inp-name");
    const inpPhone = document.getElementById("inp-phone");
    const inpModel = document.getElementById("inp-model");
    const inpLoc = document.getElementById("inp-loc");
    const inpMon = document.getElementById("inp-mon");
    const inpYear = document.getElementById("inp-year");

    const errMedia = document.getElementById("err-media");

    const txtLogin = document.getElementById("txt-login");
    const txtGive = document.getElementById("txt-give");
    const txtTake = document.getElementById("txt-take");
    const txtGiveSub = document.getElementById("txt-givesub");
    const txtTakeSub = document.getElementById("txt-takesub");
    const txtBack = document.getElementById("txt-back");
    const btnNext = document.getElementById("btn-next");

    const profName = document.getElementById("prof-name");
    const profPhone = document.getElementById("prof-phone");
    const guestProfile = document.getElementById("guest-profile");
    const userProfile = document.getElementById("user-profile");

    // file boxes
    const fileMap = [
      { box: "box-p1", file: "file-p1" },
      { box: "box-p2", file: "file-p2" },
      { box: "box-p3", file: "file-p3" },
      { box: "box-p4", file: "file-p4" },
      { box: "box-v1", file: "file-v1" }
    ];

    // ====== HELPERS ======
    function openProfile() { profileOverlay.classList.remove("hidden"); }
    function closeProfile() { profileOverlay.classList.add("hidden"); }

    function goHome() {
      document.querySelectorAll("input").forEach(i => i.classList.remove("error"));
      document.querySelectorAll(".error-text").forEach(e => e.style.display = "none");
      formRegister.classList.add("hidden");
      carResults.classList.add("hidden");
      stepChoice.classList.remove("hidden");
      closeProfile();
    }

    function showRegistration(mode) {
      currentMode = mode;
      stepChoice.classList.add("hidden");
      formRegister.classList.remove("hidden");
      if (mode === "give") extraFields.classList.remove("hidden");
      else extraFields.classList.add("hidden");
    }

    function openCountryPicker() { countryOverlay.classList.remove("hidden"); }
    function closeCountryPicker() { countryOverlay.classList.add("hidden"); }
    function selectCountry(code) { countryBtn.innerText = code; closeCountryPicker(); }

    function setLang(lang) {
      const t = translations[lang] || translations["English"];
      txtLogin.innerText = isRegistered ? userData.name.split(" ")[0] : t.login;
      txtGive.innerText = t.give;
      txtTake.innerText = t.take;
      txtGiveSub.innerText = t.givesub;
      txtTakeSub.innerText = t.takesub;
      btnNext.innerText = t.submit;
      txtBack.innerText = t.back;
      overlayScreen.style.display = "none";
    }

    function handleLogoClick() {
      if (!isRegistered) overlayScreen.style.display = "flex";
      goHome();
    }

    function checkFileFilled(inputEl) {
      const box = inputEl.parentElement;
      if (inputEl.files && inputEl.files.length > 0) {
        box.classList.add("filled");
        box.classList.remove("error");
      }
    }

    function handleFormSubmit() {
      let allValid = true;

      // media
      if (currentMode === "give") {
        const mediaOk = fileMap.every(x => {
          const f = document.getElementById(x.file);
          return f.files && f.files.length > 0;
        });
        if (!mediaOk) { errMedia.style.display = "block"; allValid = false; }
        else errMedia.style.display = "none";
      }

      // checks
      const checks = [
        { el: inpName, type: "name" },
        { el: inpPhone, type: "phone" }
      ];
      if (currentMode === "give") {
        checks.push(
          { el: inpModel, type: "text" },
          { el: inpLoc, type: "text" },
          { el: inpMon, type: "number" },
          { el: inpYear, type: "number" }
        );
      }

      checks.forEach(({ el, type }) => {
        if (!el) return;
        const val = (el.value || "").trim();
        let ok = false;

        if (type === "text") ok = val !== "";
        if (type === "name") ok = val.split(" ").filter(Boolean).length >= 2;
        if (type === "phone") ok = /^\d{7,15}$/.test(val);
        if (type === "number") ok = val !== "" && !isNaN(val) && Number(val) > 0;

        const err = el.nextElementSibling;
        if (!ok) {
          el.classList.add("error");
          if (err) err.style.display = "block";
          allValid = false;
        } else {
          el.classList.remove("error");
          if (err) err.style.display = "none";
        }
      });

      if (!allValid) return;

      // success
      isRegistered = true;
      userData.name = inpName.value.trim();
      userData.phone = countryBtn.innerText + " " + inpPhone.value.trim();

      profName.innerText = userData.name;
      profPhone.innerText = userData.phone;
      txtLogin.innerText = userData.name.split(" ")[0];

      guestProfile.classList.add("hidden");
      userProfile.classList.remove("hidden");

      if (currentMode === "take") {
        formRegister.classList.add("hidden");
        carResults.classList.remove("hidden");
      } else {
        alert("Success!");
        goHome();
      }
    }

    // ====== BUILD LANGUAGE BUTTONS ======
    overlayContent.innerHTML = "";
    Object.keys(translations).forEach(lang => {
      const b = document.createElement("button");
      b.className = "action-btn";
      b.innerText = lang;
      b.onclick = () => setLang(lang);
      overlayContent.appendChild(b);
    });

    // ====== BUILD COUNTRY BUTTONS ======
    countryContent.innerHTML = "";
    countries.forEach(country => {
      const b = document.createElement("button");
      b.className = "action-btn";
      b.innerHTML = `<b>${country.c}</b><br><small>${country.n}</small>`;
      b.onclick = () => selectCountry(country.c);
      countryContent.appendChild(b);
    });

    // ====== EVENTS ======
    document.getElementById("logo-btn").addEventListener("click", handleLogoClick);
    profileTrigger.addEventListener("click", openProfile);
    btnCloseProfile.addEventListener("click", closeProfile);

    btnProfileHome.addEventListener("click", () => { goHome(); closeProfile(); });

    btnLogout.addEventListener("click", () => location.reload());

    document.getElementById("btn-give").addEventListener("click", () => showRegistration("give"));
    document.getElementById("btn-take").addEventListener("click", () => showRegistration("take"));
    btnNext.addEventListener("click", handleFormSubmit);
    txtBack.addEventListener("click", goHome);

    countryBtn.addEventListener("click", openCountryPicker);
    btnCancelCountry.addEventListener("click", closeCountryPicker);

    // file events
    fileMap.forEach(x => {
      const box = document.getElementById(x.box);
      const file = document.getElementById(x.file);
      if (!box || !file) return;

      box.addEventListener("click", () => file.click());
      file.addEventListener("change", () => checkFileFilled(file));
    });

    // default til
    setLang("English");
  });
</script>
